{
  "verbose": true,
  "bail": 1,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{js,jsx}",
    "!**/config/**",
    "!**/coverage/**",
    "!**/docs/**",
    "!**/migrations/**",
    "!**/node_modules/**",
    "!**/seed/**",
    "!**/tests/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  },
  "coverageReporters": ["json", "lcov", "text", "clover"]
}
